<UserControl x:Class="Evon.UserControls.GameRectangle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Evon.UserControls"
             MouseRightButtonDown="doRightClick" Height="180" Width="219">
  <Grid Margin="0,0,0,0">
    <Border x:Name="MainBorder" Margin="5" Background="#FF141414" CornerRadius="5">
      <Grid>
        <Border x:Name="___No_Name_" CornerRadius="5" VerticalAlignment="Top" Height="112" Width="209"
                HorizontalAlignment="Center">
          <Border.Background>
            <ImageBrush x:Name="ScriptImage" Stretch="Fill" ImageSource="/Evon;component/prj1kcjg.bmp"
                        RenderOptions.BitmapScalingMode="HighQuality"/>
          </Border.Background>
        </Border>
        <TextBlock x:Name="ScriptTitle" Margin="5,0,47,5" TextWrapping="Wrap"
                   Text="Epic Egg Hunt 2021 Script | Ruin Easter for little kids!" VerticalAlignment="Bottom"
                   Foreground="White" FontFamily="/Evon;component/Graphics/Fonts/#Poppins Medium" FontSize="10"
                   Height="48"/>
        <Button x:Name="ExecuteB" Content="Play" HorizontalAlignment="Right" Margin="0,0,10,42"
                VerticalAlignment="Bottom" Width="32" Background="#FF9700FF" Padding="0" BorderThickness="0"
                Foreground="White" FontFamily="/Evon;component/Graphics/Fonts/#Font Awesome 5 Free Solid"
                CornerRadius="5">
          <UIElement.Effect>
            <DropShadowEffect x:Name="ButtonGlow" ShadowDepth="0" Color="#FF9700FF" Opacity="1"/>
          </UIElement.Effect>
        </Button>
      </Grid>
    </Border>
  </Grid>
</UserControl>